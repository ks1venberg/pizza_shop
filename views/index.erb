<h2>Welcome to Pizza Shop!</h2>

<div class="row">

	<% @products.each do |p| %>
		<div class="col-md-3"> 
            <div> <%= p.title%> </div>
            <div> <img src="<%= p.pathtoimage %>"> </div>
            <div> <%= p.description %> </div>
            <div> size: <%= p.size%> sm </div>
            <div>price: <%= p.price%> rub. </div>

        <div>
            <button class="btn btn-sm btn-success" onclick="add_to_cart(<%= p.id%>)">Add to cart</button>
        </div>
        </div>

    <% end %>
</div>

